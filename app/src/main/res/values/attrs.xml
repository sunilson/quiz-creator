<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StackedCardsView">
        <attr name="maxChildSpacing" format="integer" />
        <attr name="orderAnimationDuration" format="integer" />
        <attr name="popAnimationDuration" format="integer" />
        <attr name="addAnimationDuration" format="integer" />
        <attr name="maxChildHeight" format="integer" />
        <attr name="topAndBottomSpacing" format="integer" />
        <attr name="addAnimationType" format="enum">
            <enum name="NONE" value="0" />
            <enum name="TRANSLATE_DOWN" value="1" />
            <enum name="TRANSLATE_UP" value="2" />
            <enum name="TRANSLATE_LEFT" value="3" />
            <enum name="TRANSLATE_RIGHT" value="4" />
        </attr>
    </declare-styleable>
    <declare-styleable name="EditTextWithVoiceInput">
        <attr name="hint" format="string" />
        <attr name="optional" format="boolean" />
        <attr name="correctToggable" format="boolean" />
        <attr name="voiceEnabled" format="boolean" />
    </declare-styleable>
    <declare-styleable name="QuizView">
        <attr name="nextCardDelay" format="integer" />
    </declare-styleable>
    <declare-styleable name="CustomProgressBar">
        <attr name="progress" format="float" />
        <attr name="progress_label" format="string" />
        <attr name="subtitle" format="string" />
    </declare-styleable>

    <declare-styleable name="DividerHeadline">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="type" format="enum">
            <enum name="DEFAULT" value="0" />
            <enum name="CONFIRM" value="1" />
            <enum name="CANCEL" value="2" />
        </attr>
        <attr name="buttonText" format="string" />
        <attr name="buttonIcon" format="reference" />
        <attr name="small" format="boolean"/>
        <attr name="iconOnly" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TutorialSliderPagination">
        <attr name="itemAmount" format="integer" />
    </declare-styleable>
</resources>