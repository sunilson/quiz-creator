<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/result_checkmark_animation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_headline"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="20dp"
        app:lottie_fileName="check_mark_-_done.json"
        app:lottie_loop="false" />

    <TextView
        android:id="@+id/result_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result_checkmark_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_count"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="Quiz abgeschlossen!"/>

    <TextView
        android:id="@+id/result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result_headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_exit_quiz"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:visibility="invisible"
        android:text="8 / 10 Fragen richtig beantwortet!"/>

    <Button
        android:id="@+id/button_exit_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Exit"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/result_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_view_questions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:visibility="invisible"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/button_view_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_questions"
        app:layout_constraintTop_toTopOf="@id/button_exit_quiz"
        app:layout_constraintBottom_toBottomOf="@id/button_exit_quiz"
        app:layout_constraintLeft_toRightOf="@id/button_exit_quiz"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        />
</android.support.constraint.ConstraintLayout>